{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    "allowJs": true,

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,

    "jsx": "react",
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "rappid": ["vendor/rappid.min"],
      "@constants/*": ["constants/*"],
      "@script/*": ["script/*"],
      "@pages/*": ["pages/*"],
      "@ui/*": ["ui/*"],
      "@chat_ui/*": ["chat_ui/*"],
      "@ui": ["ui/index"],
      "@layouts/*": ["layouts/*"],
      "@layouts": ["layouts/index"],
      "@images/*": ["images/*"],
      "@components/*": ["components/*"],
      "@flowchart/*": ["flowchart/*"],
      "@styles/*": ["styles/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"],
      "@stores/*": ["stores/*"],
      "@stores": ["stores/implementation/index"],
      "@hooks": ["hooks/index"],
      "@actions": ["actions/index"],
      "@entities": ["entities/index"]
    },
    "types": ["node", "moment"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
